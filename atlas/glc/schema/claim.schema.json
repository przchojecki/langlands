{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GLC claim record",
  "type": "object",
  "additionalProperties": true,
  "required": ["id", "paper", "kind", "statement", "source"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable identifier, e.g. GLC1.Theorem.1.1 or GLC2.Lemma.3.4"
    },
    "paper": {
      "type": "string",
      "enum": ["GLC1", "GLC2", "GLC3", "GLC4", "GLC5"],
      "description": "Which paper in the GLC series this claim comes from."
    },
    "kind": {
      "type": "string",
      "description": "Claim kind: theorem, lemma, proposition, corollary, definition, etc."
    },
    "number": {
      "type": ["string", "null"],
      "description": "Number as printed in PDF, when extractable (e.g. 1.2, 3.4.1)."
    },
    "title": {
      "type": ["string", "null"],
      "description": "Optional bracket title, e.g. \"(Multiplicity one)\" or \"[Main theorem]\"."
    },
    "label": {
      "type": ["string", "null"],
      "description": "LaTeX label if extracted from source."
    },
    "statement": {
      "type": "string",
      "description": "The statement text. For PDF extraction this is plain text; for TeX extraction it may be LaTeX."
    },
    "source": {
      "type": "object",
      "additionalProperties": true,
      "required": ["pdf"],
      "properties": {
        "pdf": {
          "type": "object",
          "required": ["file"],
          "properties": {
            "file": {"type": "string"},
            "page_start": {"type": ["integer", "null"], "minimum": 1},
            "page_end": {"type": ["integer", "null"], "minimum": 1},
            "anchor": {"type": ["string", "null"], "description": "Optional GitHub-style #page=... anchor."}
          }
        },
        "tex": {
          "type": ["object", "null"],
          "properties": {
            "files": {"type": "array", "items": {"type": "string"}},
            "start_line": {"type": ["integer", "null"], "minimum": 1},
            "end_line": {"type": ["integer", "null"], "minimum": 1}
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Later: list of claim IDs this claim depends on."
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "notes": {
      "type": "array",
      "items": {"type": "string"}
    },
    "extraction": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "method": {"type": "string"},
        "version": {"type": "string"}
      }
    }
  }
}
